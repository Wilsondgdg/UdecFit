{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    // MODIFICACIÓN: Usaremos la resolución moderna 'bundler' o 'node16' 
    // pero 'node' suele ser el más seguro para Expo cuando hay conflictos.
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // MODIFICACIÓN: Usar los tipos correctos para el entorno RN
    "types": [
      "jest",
      "react-native" // Aseguramos que los tipos de RN se incluyan
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Si tienes tipos personalizados
    ]
  },
  "include": [
    "src",
    "__tests__",
    "App.tsx", // Aseguramos que App.tsx sea incluido
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
